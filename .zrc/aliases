# DEFINE ALIASES

# Command to remember new aliases more easily
aliases () {
   echo "mpvp\tmpv --playlist"
   echo "fde\tls | ag"
   echo "g alias"
   echo "gcb\tgit change branch"
   echo "gaa\tgit add all (tracked and untracked)"
   echo "gdt\tgit difftool"
   echo "gm\tgit merge"
   echo "gmt\tgit mergetool (to resolve merge conflicts)"
}

# General Aliases
alias fzf='fzf --multi'
alias sxiv='sxiv -bos f'
alias youtube-dl='youtube-dl --config-location "$HOME/.config/youtube-dl.conf"'
alias mpvp='mpv --playlist'
alias dpdt='figlet "De-De-De-POMME-DE-TERRE" | lolcat'

# Functional style scripts as unix names
alias fdplay='fdPlay'
alias fdshow='fdShow'

# File Management
alias chmodx='chmod +x'
alias ls1='ls -1'
alias lsl='ls -al'
alias fde='fd -d 1 -H'
alias vi='vim'
alias vifm='vifm --choose-dir "$HOME/.vifm_dir" && cd "$(cat $HOME/.vifm_dir)" && ls'
alias v='vifm'
alias ranger='ranger --choosedir="$HOME/.rangerdir"; cd "$(cat $HOME/.rangerdir)"; ls;'
alias ran='ranger'

# Session management
alias :q='exit'
alias Q='exit'

# Git
# These mostly just use the aliases I specified in git's own alias system.
alias g='git'
alias ga='git a'
alias gaa='git aa'
alias gac='git ac'
alias gacm='git acm'
alias gau='git au'
alias gc='git c'
alias gca='git ca'
alias gcm='git cm'
alias gd='git d'
alias gdt='git dt'
alias gf='git f'
alias gh='git h'
alias gl='git l | head'
alias glg='git lg | head'
alias gll='git ll'
alias gllg='git llg'
alias gm='git m'
alias gmt='git mt'
alias gp='git p'
alias gpu='git pu'
alias gpur='git pur'
alias gs='git s'
alias gcb='git branch | fzf +m -1 | cut -c 3- | xargs git checkout'

# Cargo
alias cr='cargo run'
alias cb='cargo build'
alias cdoc='cargo doc'

# Tmux
alias ta='tmux a -t'

# Linux Specific
if [ $(uname -s) = "Linux" ]; then

   alias cdr='cd /home/work/Documents/github/HegemonsHerald/runcoms/'
   alias cdrs='cd /home/work/Documents/github/HegemonsHerald/runcoms/.scripts/'

   alias sus='suspend.sh'

   alias ls='ls --color=auto -h'

fi

# Mac Specific
if [ $(uname -s) = "Darwin" ]; then

   alias cdr='cd /Users/code/Documents/GitHub/HegemonsHerald/runcoms/'
   alias cdrs='cd /Users/code/Documents/GitHub/HegemonsHerald/runcoms/.scripts/'

   # Control xterm resolution under xQuartz (so you may use X11 on the mac)
   alias xrandr_reset='xrandr -s 1680x1050'
   alias xrandr_max='xrandr -s 2880x1800'

   # Fix bug, where mpv can't open files under macOS
   # I believe media keys are for example the "play" button
   alias mpv='mpv --input-media-keys=no'

   alias ls='exa'

fi
