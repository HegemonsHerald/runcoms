# DEFINE ALIASES

# Linux Specific
if [ $(uname -s) = "Linux" ]; then

        alias ls='ls --color=auto -h'
        # alias ls='exa'

        alias cdr='cd /home/work/Documents/github/HegemonsHerald/runcoms/'
        alias cdrs='cd /home/work/Documents/github/HegemonsHerald/runcoms/.scripts/'

fi

# Mac Specific
if [ $(uname -s) = "Darwin" ]; then

        alias ls='exa'

        # control xterm resolution under xQuartz (so you may use X11 on the mac)
        alias xrandr_reset='xrandr -s 1680x1050'
        alias xrandr_max='xrandr -s 2880x1800'

        # fixes bug, where mpv can't open files under macOs for some reason
        # I believe media keys are thing like "play" buttons
        alias mpv='mpv --input-media-keys=no'

        alias cdr='cd /Users/code/Documents/GitHub/HegemonsHerald/runcoms/'
        alias cdrs='cd /Users/code/Documents/GitHub/HegemonsHerald/runcoms/.scripts/'

fi

# General Aliases
alias fzf='fzf --multi --preview="highlight --force -O ansi {} | head -$LINES --silent"'
alias sxiv='sxiv -bos f'
alias youtube-dl="youtube-dl --config-location '~/.config/youtube-dl.conf'"
alias mpvp='mpv --playlist '
alias p6='perl6'
alias dpdt='figlet "De-De-De-POMME-DE-TERRE" | lolcat'

# Scripts as unix names
alias fdplay='fdPlay'
alias fdshow='fdShow'

# File Management
alias chmodx='chmod +x'
alias ranger='ranger --choosedir=$HOME/.rangerdir; cd "$(cat $HOME/.rangerdir)"; ls;'
alias ran='ranger'
alias ls1='ls -1'
alias lsl='ls -al'
alias vifm='vifm --choose-dir "$HOME/.vifm_dir" && cd "$(cat $HOME/.vifm_dir)" && ls'
alias v='vifm'
alias vi='vim'

# Session management
alias :q='exit'
alias Q='exit'
# alias q='exit'
alias sus='suspend.sh'

# Git
alias g='git'
alias ga='git a'
alias gaa='git aa'
alias gac='git ac'
alias gacm='git acm'
alias gau='git au'
alias gc='git c'
alias gca='git ca'
alias gcm='git cm'
alias gd='git d'
alias gdt='git dt'
alias gf='git f'
alias gh='git h'
alias gl='git l | head'
alias glg='git lg | head'
alias gll='git ll'
alias gllg='git llg'
alias gm='git m'
alias gmt='git mt'
alias gp='git p'
alias gpu='git pu'
alias gpur='git pur'
alias gs='git s'

# Cargo
alias cr='cargo run'
alias cb='cargo build'
alias cdoc='cargo doc'

# Tmux
alias ta='tmux a -t'
