# DEFINE ALIASES

# Linux Specific
if [ $(uname -s) = "Linux" ]; then

	alias ls='ls --color -F -h'

fi

# Mac Specific
if [ $(uname -s) = "Darwin" ]; then

	# alias ls='ls -G -L -h'
	alias ls='exa'

	alias xrandr_reset='xrandr -s 1680x1050'
	alias xrandr_max='xrandr -s 2880x1800'

fi

# General Aliases
alias fzf='fzf --multi --preview="highlight --force -O ansi {} | head -$LINES --silent"'
alias wtouch='wacom-toggle_touch.sh'
alias asciib='asciib.sh'
alias p6='perl6'
alias dpdt='figlet "De-De-De-POMME-DE-TERRE" | lolcat'
alias youtube-dl="youtube-dl --config-location '~/.config/youtube-dl.conf'"
alias sxiv='sxiv -o'
alias mpvp='mpv --playlist '

# File Management
alias chmodx='chmod +x'
alias ranger='ranger --choosedir=$HOME/.rangerdir; cd "$(cat $HOME/.rangerdir)"; ls;'
alias ran='ranger'
alias ls1='ls -1'
alias lsl='ls -al'
alias vifm='vifm --choose-dir "$HOME/.vifm_dir" && cd "$(cat $HOME/.vifm_dir)" && ls'
alias v='vifm'

# Session management
alias :q='exit'
alias Q='exit'
alias q='exit'
alias sus='suspend.sh'

# Search Function
alias s='search'			# search for filename and content
alias cds='cd_search'			# cd search	(full search)
alias cdf='cd_search_filename'		# cd file	(filename and dirname search)
alias cdd='cd_search_directory' 	# cd directory	(dirname only search)
alias vims='vim_search'			# vim search
alias sless='less_search'		# search | less
alias cats='content_search_exact'	# lets you search the contents of $1 by line, cat $1 | search
alias cs='select_and_search'		# lets you select a file with search to search with cats, search $1 | cats

# Git
alias g='git'
alias ga='git add'
alias ga.='git add .'
alias gp='git push'
alias gc='git commit'
alias gm='git commit -m'
alias gpu='git pull'
alias gf='git fetch'
alias gs='git status'
alias gl='git log'
alias gst='git stash'
alias gsta='git stash apply'

# Cargo
alias cr='cargo run'
alias cb='cargo build'
alias cdoc='cargo doc'

# Tmux
alias ta='tmux a -t'
